<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/dp_80">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/import_phone_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/button_white_bg_gray_stroke_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="ImportFromPhoneContacts"
        android:textColor="@color/button_white_bg_gray_stroke_text_color"
        android:textSize="@dimen/dp_17" />

    <View
        android:visibility="invisible"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@color/dividing_line_1"></View>
</LinearLayout>
