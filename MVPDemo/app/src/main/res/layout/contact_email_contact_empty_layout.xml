<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/empty_view"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_145"
        android:layout_height="@dimen/dp_145"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/empty_nocontact" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_15"
        android:text="@string/YourEmailContactsIsEmpty"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_19"
         />
    <TextView
        android:id="@+id/import_phone_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/button_white_bg_gray_stroke_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/ImportFromPhoneContacts"
        android:textColor="@color/button_white_bg_gray_stroke_text_color"
        android:textSize="@dimen/dp_17" />
</LinearLayout>